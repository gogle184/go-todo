{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"**/node_modules",
			"**/*-lock.json",
			"**/build/**",
			"**/schema.ts",
			"**/*Schema.ts",
			"**/*.d.ts",
			"**/.react-router/**",
			"frontend/app/routes/home.tsx",
			"frontend/app/welcome/welcome.tsx"
		]
	}
}
